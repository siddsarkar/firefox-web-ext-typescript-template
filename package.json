{
  "name": "firefox-web-ext-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently  --names \"TSC,EXT\" -c \"bgGreen.bold,bgMagenta.bold\" \"npm run tsc\" \"npm run start\"",
    "start": "web-ext run --source-dir ./extension-dist/",
    "tsc": "tsc --watch",
    "build": "web-ext build --source-dir=./extension-dist/ --artifacts-dir=./build",
    "lint": "web-ext lint --source-dir=./extension-dist/"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.1",
    "web-ext-types": "^3.2.1"
  }
}
